<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellowb"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/gotaxi2"
        android:layout_above="@+id/toTheFirstPassage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/toTheFirstPassage"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/toTheSecondPassage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="68dp"
        android:src="@drawable/estimate1" />

    <ImageButton
        android:id="@+id/toTheSecondPassage"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_above="@+id/toTheThirdPassage"
        android:layout_alignLeft="@+id/toTheFirstPassage"
        android:layout_alignStart="@+id/toTheFirstPassage"
        android:layout_marginBottom="16dp"
        android:src="@drawable/howtouse1" />

    <ImageButton
        android:id="@+id/toTheThirdPassage"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="66dp"
        android:src="@drawable/report1"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/toTheSecondPassage"
        android:layout_alignStart="@+id/toTheSecondPassage" />

</RelativeLayout>